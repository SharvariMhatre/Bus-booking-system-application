<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.busbook">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BusBook">
        <activity
            android:name=".FinalpageActivity"
            android:exported="true" />
        <activity
            android:name=".TicketconfirmationpageActivity"
            android:exported="true" />
        <activity
            android:name=".LocationpageActivity"
            android:exported="true" />
        <activity
            android:name=".ProfilePageActivity"
            android:exported="true" />
        <activity
            android:name=".BusSelectionPageActivity"
            android:exported="true" />
        <activity
            android:name=".BookingPageActivity"
            android:exported="true" />
        <activity
            android:name=".BusSearchPageActivity"
            android:exported="true" />
        <activity
            android:name=".RegistrationPageActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>