<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/profile_bg">


                        <FrameLayout
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:src="@drawable/profilepic"
                                app:civ_border_color="#f5a622"
                                app:civ_border_width="3dp"
                                app:civ_border_overlay="false"
                                android:layout_gravity="center">

                            </de.hdodenhof.circleimageview.CircleImageView>

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_cam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:elevation="1dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_baseline_photo_camera_24"
                                app:backgroundTint="@color/white" />

                        </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/locate_me"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_margin="30dp"
                            android:background="@drawable/loc_btn"
                            android:fontFamily="@font/calibri"
                            android:textAllCaps="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:textColor="@color/button_color"
                            android:textColorLink="@color/colorAccent"
                            android:textSize="20dp"
                            android:src="@drawable/ic_baseline_person_pin_circle_24"
                            android:textStyle="bold" >

                        </ImageButton>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:background="@drawable/loc_btn"
                        android:fontFamily="@font/calibri"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_baseline_theaters_24"
                        android:textAllCaps="false"
                        android:textColor="@color/button_color"
                        android:textColorLink="@color/colorAccent"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </ImageButton>
                </LinearLayout>
            </LinearLayout>


            </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-300dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="7dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:textSize="18dp"
                        android:text="UserName"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:text="Email ID"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:layout_marginTop="25dp"
                        android:textSize="18dp"
                        android:text="Mobile no."
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/display_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:textAlignment="textEnd"
                        android:inputType="textPersonName"
                        android:textColor="#f5a622"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/display_us2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/calibri"
                        android:textAlignment="textEnd"
                        android:textColor="#f5a622"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/display_us3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/calibri"
                        android:textAlignment="textEnd"
                        android:textColor="#f5a622"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <Button
            android:id="@+id/goto_lg"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/calibri"
            android:text="Go-to Login"
            android:textAllCaps="false"
            android:textColor="@color/button_color"
            android:textColorLink="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp" />
        <Button
            android:id="@+id/goto_lgout"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/calibri"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/button_color"
            android:textColorLink="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold" />



    </LinearLayout>

</RelativeLayout>

